<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12" id="content-header">
      <span class="col-md-3">
      </span>
        <h1 class="m-0 text-dark col-md-6">
          <%= t('product_category') %>
        </h1>
        <ol class="breadcrumb float-sm-right col-md-3">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">
            <%= t('product_category') %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class=row>
            <div class="col-md-6">
              <%= form_with(url: "/product_categories", method: "get", local: true) do |f| %>
                <%= f.hidden_field :page, :value => 1 %>
                <div class="form-row">
                  <div class="form-group col-sm-6">
                    <%= f.text_field(:search, value: @search_query, placeholder: "Search", class: "form-control") %>
                  </div>

                  <div class="form-group col-sm-2">
                    <%= f.submit "Search", class: "btn btn-search btn-smr" %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="col-md-6">
              <%= link_to 'New', new_product_category_path(), class: "btn btn-primary btn-smr float-sm-right" %>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive">
          <table id="place_list" class="table table-striped projects">
            <thead>
            <tr>
              <th>No.</th>
              <th><%= t('name') %></th>
              <th class="text-center">Action</th>
            </tr>
            </thead>

            <tbody>
            <% index = 0 %>
            <% @product_categories.each do |product_category| %>
              <tr>
                <% index = index + 1 %>
                <td><%= index %></td>
                <td><%= product_category.name %></td>
                <td class="project-actions text-center">
                  <a class="btn-action" href="/product_categories/<%= product_category.id %>" data-toggle="tooltip" title="View"><i class="fa fa-eye"></i></a>
                  <a class="btn-action edit" href="/product_categories/<%= product_category.id %>/edit" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil-alt"></i></a>
                  <a class="btn-action delete" data-confirm="Do you want to delete this item?" rel="nofollow" data-method="delete" data-toggle="tooltip" title="Delete" href="/product_categories/<%= product_category.id %>"><i class="fa fa-trash"></i></a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <!-- <div class="p-2 digg_pagination">
            <%= will_paginate @product_categories %>
          </div> -->
        </div>
      </div>
    </div>
  </div>
</section>