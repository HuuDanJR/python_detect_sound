<%= form_with(model: term_service, local: true) do |form| %>
  <div class="row">
    <% if term_service.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(term_service.errors.count, "error") %> prohibited this term_service from being saved:</h2>

        <ul>
          <% term_service.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">Information</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <div class="form-row">
            <div class="form-group col-sm-8">
              <label><%= t('name') %>:</label>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            
            <div class="form-group col-sm-4">
              <label><%= t('index') %>:</label>
              <%= form.text_field :index, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-sm-12">
              <label><%= t('content') %>:</label>
              <%= form.text_area :content, class: "form-control", rows:"6", required: true %>
            </div>
          </div>

          <div class="form-row">
            <div class="field">
              <label><%= t('term_service_attach') %>:</label>
              <div class="list-img">
               <div>
                    <img id="drag1" src="/attachments/download/<%= @term_service.attachment_id %>?version=medium" width="360" height="360">
                  </div>
              </div>
              <%= form.file_field :attachment, :multiple => false, accept: 'image/*', class: "form-control" %>
              <%= form.number_field :attachment_id, class: "form-control", hidden: true %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= link_to 'Back', 'javascript:void(0);', onclick: "window.history.back(); setTimeout(function(){window.location.reload();}, 100);", class: "btn btn-secondary" %>      <input class="btn btn-success float-right" name="btnSubmit" data-disable-with="Processing..." type="submit" value="Save" />
      <%# <button type="submit" class="btn btn-success float-right" id="btnSubmit">Save</button> %>
    </div>
  </div>
<% end %>

<script>
  $( document ).ready(function() {
    var editor = CKEDITOR.replace('term_service_content');
  });
  
</script>