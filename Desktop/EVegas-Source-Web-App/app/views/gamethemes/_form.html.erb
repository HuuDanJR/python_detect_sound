<%= form_with(model: gametheme, local: true) do |form| %>
  <div class="row">
    <% if gametheme.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(gametheme.errors.count, "error") %> prohibited this gametheme from being saved:</h2>

        <ul>
          <% gametheme.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">Information</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <div class="form-row">
            <div class="form-group col-sm-6">
              <label><%= t('name') %>:</label>
              <%= form.text_field :name, class: "form-control", required: true %>
            </div>

            <div class="form-group col-sm-6">
              <label>Game Type Id:</label>
              <%= form.text_field :game_type_id, class: "form-control" %>
            </div>
          </div>
          
          <div class="form-row">
            <div class="field">
              <label>
                <%= t('Image') %> :<span style="color: red !important;">Ratio 16:10 - 1040px:670px</span>
              </label>
              <div class="list-img">
                <% if @gametheme.attachment_id? %>
                  <div>
                    <img id="drag1" src="/attachments/download/<%= @gametheme.attachment_id %>?version=medium" width="360" height="360">
                  </div>
                  <% end %>
              </div>
              <%= form.file_field :attachment, :multiple=> false, accept: 'image/*', class: "form-control" %>
                <%= form.number_field :attachment_id, class: "form-control" , hidden: true %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="row" style="padding:10px">
    <div class="col-12">
      <%= link_to 'Back', 'javascript:void(0);', onclick: "window.history.back(); setTimeout(function(){window.location.reload();}, 100);", class: "btn btn-secondary" %>      <input class="btn btn-success float-right" name="btnSubmit" data-disable-with="Processing..." type="submit" value="Save" />
      <%# <button type="submit" class="btn btn-success float-right" id="btnSubmit">Save</button> %>
    </div>
  </div>
<% end %>