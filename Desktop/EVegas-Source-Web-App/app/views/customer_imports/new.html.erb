<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12" id="content-header">
      <span class="col-md-3">
      </span>
        <h1 class="m-0 text-dark col-md-6">
          <%= t('customer') %>
        </h1>
        <ol class="breadcrumb float-sm-right col-md-3">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">
            <%= t('customer') %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-12">
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">Import data from Excel file</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive">
        <div>
          <a class="" href="/attachments/download-template-customer" target="_blank">
                                Download Template Import
                            </a>
        </div>
          <h5>Chose File</h5>
          <%= form_with(model: @customer_import, local: true) do |f| %>
            <%= f.file_field :file %>
            <br/>
            <%= f.submit "Import File", class: "btn btn-primary btn-sm mt-1" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
