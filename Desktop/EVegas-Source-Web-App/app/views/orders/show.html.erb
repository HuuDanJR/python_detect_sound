<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12" id="content-header">
      <span class="col-md-3">
      </span>
        <h1 class="m-0 text-dark col-md-6">
          <%= t('food_&_drink_show') %>
        </h1>
        <ol class="breadcrumb float-sm-right col-md-3">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">
            <%= t('food_&_drink_show') %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-secondary">
          <div class="card-header">
            <h3 class="card-title">Information</h3>
          </div>
          <div class="card-body">
           <div class="form-row">
            <div class="form-group col-sm-4">
              <label><%= t('customer') %>:</label>
              <%= @order.customer.forename %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('customer_number') %>:</label>
              <%= @order.customer.number %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('Total') %>:</label>
              <%= @order.total %>
            </div>
          </div>
          <div class="form-row">
            <div class="card-body table-responsive">
              <label>List product orders</label>
              
              <table class="table table-striped projects">
                <thead>
                <tr>
                  <th width="10px">No.</th>
                  <th ><%= t('product_sku') %></th>
                  <th ><%= t('product_name') %></th>
                  <th><%= t('quantity') %></th>
                  <th><%= t('unit_price') %></th>
                  <th><%= t('sub_total') %></th>
                </tr>
                </thead>
                <tbody>
                <% index = 0 %>
                <% @product_orders.each do |item| %>
                  <tr>
                    <% index = index + 1 %>
                    <td width="10px"><%= index %></td>
                    <td >
                      <%= item.product.sku %>
                    </td>
                    <td >
                      <%= item.product.name %>
                    </td>
                    <td>
                      <%= item.quantity %>
                    </td>
                    <td>
                      <%= item.unit_price %>
                    </td>
                    <td>
                      <%= item.sub_total %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>

          <div class="form-group col-sm-6">
            <label>Internal Note:</label>
            <%= @order.internal_note %>
          </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= link_to 'Back', 'javascript:void(0);', onclick: "window.history.back(); setTimeout(function(){window.location.reload();}, 100);", class: "btn btn-secondary" %>      </div>
    </div>
  </div>
</section>