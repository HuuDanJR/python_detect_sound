<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12" id="content-header">
      <span class="col-md-3">
      </span>
        <h1 class="m-0 text-dark col-md-6">
          <%= t('role') %>
        </h1>
        <ol class="breadcrumb float-sm-right col-md-3">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">
            <%= t('role') %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>
  

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class=row>
            <div class="col-md-6">
              <%= form_with(url: "/roles", method: "get", local: true) do |f| %>
                <%= f.hidden_field :page, :value => 1 %>
                <div class="form-row">
                  <div class="form-group col-sm-6">
                    <%= f.text_field(:search, value: @search_query, placeholder: "Search", class: "form-control") %>
                  </div>

                  <div class="form-group col-sm-2">
                    <%= f.submit "Search", class: "btn btn-search btn-smr" %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="col-md-6">
              <%= link_to 'New', new_role_path(), class: "btn btn-primary btn-smr float-sm-right" %>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive">
          <table class="table table-striped projects">
            <thead>
            <tr>
              <th>No.</th>
              <th><%= t('role_name') %></th>
              <th><%= t('role_description') %></th>
              <th><%= t('role_action') %></th>
              <th><%= t('role_resource') %></th>
              <th class="text-center">Action</th>
            </tr>
            </thead>

            <tbody>
            <% index = 0 %>
            <% @roles.each do |role| %>
              <tr>
                <% index = index + 1 %>
                <td><%= index %></td>
                <td><%= role.name %></td>
                <td><%= role.description %></td>
                <td><%= role.action %></td>
                <td><%= role.resource %></td>
                <td class="project-actions text-center">
                    <a class="btn-action" href="/roles/<%= role.id %>" data-toggle="tooltip" title="View"><i class="fa fa-eye"></i></a>
                    <a class="btn-action edit" href="/roles/<%= role.id %>/edit" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil-alt"></i></a>
                    <a class="btn-action delete" data-confirm="Do you want to delete this item?" rel="nofollow" data-method="delete" data-toggle="tooltip" title="Delete" href="/roles/<%= role.id %>"><i class="fa fa-trash"></i></a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <div class="p-2 digg_pagination">
            <%= will_paginate @roles %>
          </div>
          <!--          <div class=row>-->
          <!--            <div class="col-md-12">-->
          <!--              <a class="btn btn-primary btn-smr float-sm-right" href="/roles/export" target="_blank">Export</a>-->
          <!--            </div>-->
          <!--          </div>-->
        </div>
      </div>
    </div>
  </div>
</section>
