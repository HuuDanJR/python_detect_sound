<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12" id="content-header">
      <span class="col-md-3">
      </span>
        <h1 class="m-0 text-dark col-md-6">
          <%= t('officer_show') %>
        </h1>
        <ol class="breadcrumb float-sm-right col-md-3">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">
            <%= t('officer_show') %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>


<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-secondary">
          <div class="card-header">
            <h3 class="card-title">Information</h3>
          </div>
          <div class="card-body">
           <div class="form-row">
            <div class="form-group col-sm-4">
              <label><%= t('officer_name') %>:</label>
              <%= @officer.name %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('officer_date_of_birth') %>:</label>
              <p>
                <% if !@officer.date_of_birth.nil? %>
                  <%= @officer.date_of_birth == nil ? "" : @officer.date_of_birth.strftime("%d-%m-%Y") %>
                <% end %>
              </p>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('officer_phone') %>:</label>
              <%= @officer.phone %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('officer_home_town') %>:</label>              
              <%= @officer.home_town %>
            </div>
              <div class="form-group col-sm-4">
                <label><%= t('officer_gender') %>:</label>
                <p><%= @officer.gender ? "Male" : "Female" %></p>
              </div>
          </div>

          <div class="form-row">
            <div class="form-group col-sm-4">
              <label><%= t('officer_nationality') %>:</label>            
              <%= @officer.nationality %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('officer_language_support') %>:</label>            
              <%= @officer.language_support %>
            </div>
              <div class="form-group col-sm-4">
                <label><%= t('officer_online') %>:</label>
                <p><%= @officer.online ? "Online" : "Offline" %></p>
              </div>
          </div>

            <div class="form-row">
              <div class="field">
                <label><%= t('title_attach') %>:</label>
                <div class="list-img">
        
                      <div>
                        <img src="/attachments/download/<%= @officer.attachment_id %>?version=medium" width="100" height="100">
                      </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= link_to 'Back', 'javascript:void(0);', onclick: "window.history.back(); setTimeout(function(){window.location.reload();}, 100);", class: "btn btn-secondary" %>      </div>
    </div>
  </div>
</section>
