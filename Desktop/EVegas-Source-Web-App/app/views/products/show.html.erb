<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12" id="content-header">
      <span class="col-md-3">
      </span>
        <h1 class="m-0 text-dark col-md-6">
          <%= t('product_show') %>
        </h1>
        <ol class="breadcrumb float-sm-right col-md-3">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">
            <%= t('product_show') %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-secondary">
          <div class="card-header">
            <h3 class="card-title">Information</h3>
          </div>
          <div class="card-body">
            <!-- <% if !@product.qrcode.nil? && !@product.qrcode.empty? %>
            <div class="form-row">
              <div class="form-group col-sm-4">
                <label>
                  <%= t('Qrcode') %>:
                </label>
                <div>
                  <%= @imageQrcode.html_safe %>
                </div>
              </div>
            </div>
          <% end %>
          -->
           <div class="form-row">
            <div class="form-group col-sm-4">
              <label><%= t('sku') %>:</label>
              <%= @product.sku %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('name') %>:</label>
              <p>
                <%= @product.name %>
              </p>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('base_price') %>:</label>
              <%= @product.base_price %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('price') %>:</label>              
              <%= @product.price %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('point_price') %>:</label>              
              <%= @product.point_price %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('product_type') %>:</label>
              <p><%= @product.product_type == 1 ? "Food" : "Drinks" %></p>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('customer_level') %>:</label>              
              <%= @product.customer_level %>
            </div>
            
            <div class="form-group col-sm-4">
              <label><%= t('description') %>:</label>              
              <%= @product.description %>
            </div>
          </div>

          <div class="form-row">
            <div class="field">
              <label><%= t('title_attach') %>:</label>
              <div class="list-img">
      
                    <div>
                      <img src="/attachments/download/<%= @product.attachment_id %>?version=medium" width="100" height="100">
                    </div>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= link_to 'Back', 'javascript:void(0);', onclick: "window.history.back(); setTimeout(function(){window.location.reload();}, 100);", class: "btn btn-secondary" %>      </div>
    </div>
  </div>
</section>