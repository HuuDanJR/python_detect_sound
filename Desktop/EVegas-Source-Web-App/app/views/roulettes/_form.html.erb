<%= form_with(model: roulette, local: true) do |form| %>
  <div class="row">
    <% if roulette.errors.any? %>
      <div class="col-md-12" id="error_explanation">
        <h4><%= pluralize(roulette.errors.count, "error") %> prohibited this roulette from being saved:</h4>

        <ul>
          <% roulette.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">Information</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <div class="form-row">
            <div class="form-group col-sm-4">
              <label><%= t('roulette_name') %>:</label>
              <%= form.text_field :name, class: "form-control", required: true %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('roulette_description') %>:</label>
              <%= form.text_field :description, class: "form-control" %>
            </div>
            <div class="form-group col-sm-4">
              <label><%= t('roulette_publish') %>:</label>
              <div class="gender-item">
                <%= form.check_box :publish %>
              </div>
            </div>
            <div class="form-group col-sm-12">
              <label><%= t('roulette_streaming_url') %>:</label>
              <%= form.text_field :streaming_url, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= link_to 'Back', roulettes_path, class: "btn btn-secondary" %>
      <input class="btn btn-success float-right" name="btnSubmit" data-disable-with="Processing..." type="submit" value="Save" />
      <%# <button type="submit" class="btn btn-success float-right" id="btnSubmit">Save</button> %>
    </div>
  </div>
<% end %>
