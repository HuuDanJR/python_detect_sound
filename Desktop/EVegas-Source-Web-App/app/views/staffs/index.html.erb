<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"><%= t('staff') %></h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active"><%= t('staff') %></li>
        </ol>
      </div><!-- /.col -->

    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class=row>
            <div class="col-md-6">
              <%= form_with(url: "/staffs", method: "get", local: true) do |f| %>
                <%= f.hidden_field :page, :value => 1 %>
                <div class="form-row">
                </div>
              <% end %>
            </div>
            <div class="col-md-6">
              <%= link_to 'New', new_staff_path(), class: "btn btn-primary btn-smr float-sm-right" %>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive">
          <table id="place_list" class="table table-striped projects">
            <thead>
            <tr>
              <th>No.</th>
              <th><%= t('name') %></th>
              <th><%= t('nick_name') %></th>
              <th><%= t('code') %></th>
              <th><%= t('gender') %></th>
              <th><%= t('position') %></th>
              <th class="text-center">Action</th>
            </tr>
            </thead>

            <tbody>
            <% index = 0 %>
            <% @staffs.each do |staff| %>
              <tr>
                <% index = index + 1 %>
                <td><%= index %></td>
                <td><%= staff.name %></td>
                <td><%= staff.nick_name %></td>
                <td><%= staff.code %></td>
                <td><%= staff.gender ? "Male" : "Female" %></td>
                <td><%= staff.position %></td>
                <td class="project-actions text-center">
                    <a class="btn-action" href="/staffs/<%= staff.id %>" data-toggle="tooltip" title="View"><i class="fa fa-eye"></i></a>
                    <a class="btn-action edit" href="/staffs/<%= staff.id %>/edit" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil-alt"></i></a>
                    <a class="btn-action delete" data-confirm="Do you want to delete this item?" rel="nofollow" data-method="delete" data-toggle="tooltip" title="Delete" href="/staffs/<%= staff.id %>"><i class="fa fa-trash"></i></a>  
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <div class="p-2 digg_pagination">
            <%= will_paginate @staffs %>
          </div>
          <div class=row>
            <div class="col-md-12">
              <a class="btn btn-search btn-smr float-sm-right" href="/staff_imports/new" target="_blank">Import</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>