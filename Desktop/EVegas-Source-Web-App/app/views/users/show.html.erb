<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12" id="content-header">
      <span class="col-md-3">
      </span>
        <h1 class="m-0 text-dark col-md-6">
          <%= t('user_show') %>
        </h1>
        <ol class="breadcrumb float-sm-right col-md-3">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">
            <%= t('user_show') %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-secondary">
          <div class="card-header">
            <h3 class="card-title">User Information</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <div class="form-row">
              <div class="col-md-6 form-group">
                <p>
                  <strong><%= t('user_email') %>:</strong>
                  <%= @user.email %>
                </p>
              </div>
              <div class="col-md-6 form-group">
                <p>
                  <strong><%= t('user_name') %>:</strong>
                  <%= @user.name %>
                </p>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 form-group list-hide-end">
                <p>
                  <strong><%= t('group') %>:</strong>
                  <% @user.groups.each do |item| %>
                    <%= item.name %> <span>-</span>
                  <% end %>
                </p>
              </div>
              <div class="col-md-6 form-group">
                <p>
                  <strong><%= t('user_created_at') %>:</strong>
                  <%= @user.created_at.strftime("%d-%m-%Y") %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="card card-secondary">
          <div class="card-header">
            <h3 class="card-title">Role Information</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <div class="form-row">
              <div class="col-md-12 form-group">
                <table id="user_role" class="table table-striped projects">
                  <thead>
                  <tr>
                    <th>No.</th>
                    <th><%= t('role_name') %></th>
                    <th><%= t('role_description') %></th>
                  </tr>
                  </thead>
                  <tbody>
                  <% index = 0 %>
                  <% @user.roles.each do |item| %>
                    <tr>
                      <% index = index + 1 %>
                      <td><%= ++index %></td>
                      <td><%= item.name %></td>
                      <td><%= item.description %></td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= link_to 'Back', 'javascript:void(0);', onclick: "window.history.back(); setTimeout(function(){window.location.reload();}, 100);", class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</section>

