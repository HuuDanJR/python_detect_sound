<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12" id="content-header">
      <span class="col-md-3">
      </span>
        <h1 class="m-0 text-dark col-md-6">
          <%= t('accommodation_show') %>
        </h1>
        <ol class="breadcrumb float-sm-right col-md-3">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">
            <%= t('accommodation_show') %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-secondary">
          <div class="card-header">
            <h3 class="card-title">Information</h3>
          </div>
          <div class="card-body">
            <p>
              <strong>Date Pick:</strong>
              <%= @accommodation.date_pick.strftime("%d-%m-%Y %H:%M") %>
            </p>

            <p>
              <strong>Time End:</strong>
              <%= @accommodation.time_end.strftime("%d-%m-%Y %H:%M") %>
            </p>

            <% if @accommodation.status == 2 %>
              <p>
                <strong>Message from staff:</strong>
                <%= @accommodation.note_confirm %>
              </p>
            <% elsif @accommodation.status == 0 %>
              <p>
                <strong>Message from staff:</strong>
                <%= @accommodation.note_cancel %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <%= link_to 'Back', 'javascript:history.back()', class: "btn btn-secondary", "data-turbolinks": "false" %>
      </div>
    </div>
  </div>
</section>