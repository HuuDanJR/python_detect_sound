<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12" id="content-header">
      <span class="col-md-3">
      </span>
        <h1 class="m-0 text-dark col-md-6">
          <%= t('membership_show') %>
        </h1>
        <ol class="breadcrumb float-sm-right col-md-3">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">
            <%= t('membership_show') %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>


<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-secondary">
          <div class="card-header">
            <h3 class="card-title">Information</h3>
          </div>
          <div class="card-body">
            <p>
              <strong>Name:</strong>
              <%= @membership.name %>
            </p>

            <p>
              <strong>Sub:</strong>
              <%= @membership.sub %>
            </p>
            <p>
              <strong>Point:</strong>
              <%= @membership.point %>
            </p>
            <p>
              <strong>Color Milestone:</strong>
              <%= @membership.color_milestone %>
            </p>
            <p>
              <strong>Show Milestone:</strong>
              <%= @membership.is_show_milestone %>
            </p>
            <p>
              <strong>Show Name:</strong>
              <%= @membership.is_show_name %>
            </p>
             <p>
              <strong>Icon:</strong>
              <img src="/attachments/download/<%= @membership.attachment_id %>" alt="<%= @membership.attachment_id %>" style="width: 80px; height: 180px; object-fit:contain;">
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= link_to 'Back', 'javascript:void(0);', onclick: "window.history.back(); setTimeout(function(){window.location.reload();}, 100);", class: "btn btn-secondary" %>      </div>
    </div>
  </div>
</section>