<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12" id="content-header">
      <span class="col-md-3">
      </span>
        <h1 class="m-0 text-dark col-md-6">
          <%= t('jackpot_machine_show') %>
        </h1>
        <ol class="breadcrumb float-sm-right col-md-3">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">
            <%= t('jackpot_machine_show') %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-secondary">
          <div class="card-header">
            <h3 class="card-title">Information</h3>
          </div>
          <div class="card-body">
            <p>
              <strong>Machine Number:</strong>
              <%= @jackpot_machine.mc_number %>
            </p>

            <p>
              <strong>Machine Name:</strong>
              <%= @jackpot_machine.mc_name %>
            </p>

            <p>
              <strong>Date:</strong>
              <%= @jackpot_machine.jp_date != nil ? @jackpot_machine.jp_date.strftime("%d-%m-%Y") : "" %>
            </p>

            <p>
              <strong>Game Type:</strong>
              <%= @jackpot_machine.jackpot_game_type != nil ? @jackpot_machine.jackpot_game_type.name : "" %>
            </p>

            <p>
              <strong>Jackpot value:</strong>
              <%= @jackpot_machine.jp_value %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= link_to 'Edit', edit_jackpot_machine_path(@jackpot_machine), class: "btn btn-success float-right", "data-turbolinks": "false" %>
        <%= link_to 'Back', 'javascript:void(0);', onclick: "window.history.back(); setTimeout(function(){window.location.reload();}, 100);", class: "btn btn-secondary" %>      </div>
    </div>
  </div>
</section>
