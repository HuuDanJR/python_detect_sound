<%= form_with(model: jackpot_machine, local: true) do |form| %>
  <div class="row">
    <% if jackpot_machine.errors.any? %>
      <div class="col-md-12" id="error_explanation">
        <h4><%= pluralize(jackpot_machine.errors.count, "error") %> prohibited this jackpot_machine from being saved:</h4>

        <ul>
          <% jackpot_machine.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="card card-secondary">
        <div class="card-header">
          <h3 class="card-title">Information</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <div class="form-row">
            <div class="form-group col-sm-2">
              <label><%= t('jackpot_machine_number') %>:</label>
              <%= form.text_field :mc_number, class: "form-control", required: true %>
            </div>
            <div class="form-group col-sm-2">
              <label><%= t('jackpot_machine_name') %>:</label>
              <%= form.text_field :mc_name, class: "form-control" %>
            </div>
            <div class="form-group col-sm-2">
              <label><%= t('jackpot_date') %>:</label>
              <%= form.date_field :jp_date, class: "form-control", required: true %>
            </div>
            <div class="form-group col-sm-3">
              <label><%= t('jackpot_game_type') %>:</label>
              <%= form.hidden_field :jackpot_game_type_id, id: "jackpot_game_type_id" , name: "jackpot_game_type_id" %>
              <%= form.select :jackpot_game_type_id, options_from_collection_for_select(@jackpotGameTypes, :id, :name, @jackpot_machine.jackpot_game_type_id),
                  {:include_blank=> '-- Game Type --'}, {class: "form-control select2"} %>
            </div>
            <div class="form-group col-sm-3">
              <label><%= t('jackpot_value') %>:</label>
              <%= form.number_field :jp_value, class: "form-control", step: :any %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= link_to 'Back', 'javascript:void(0);', onclick: "window.history.back(); setTimeout(function(){window.location.reload();}, 100);", class: "btn btn-secondary" %>      <input class="btn btn-success float-right" name="btnSubmit" data-disable-with="Processing..." type="submit" value="Save" />
      <%# <button type="submit" class="btn btn-success float-right" id="btnSubmit">Save</button> %>
    </div>
  </div>
<% end %>
